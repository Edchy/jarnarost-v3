---
import Icon from "./Icon.astro";
import Icon2 from "./Icon2.astro";
import Icon3 from "./Icon3.astro";
---

<div>
  <button popovertarget="popover1">
    <img src="/images/coffee/brygg.avif" alt="bag of coffebeans" />
    <Icon />
  </button>
  <button popovertarget="popover2">
    <img src="/images/coffee/esp.avif" alt="bag of coffebeans" />
    <Icon2 />
  </button>
  <button popovertarget="popover3">
    <img src="/images/coffee/mellan.avif" alt="bag of coffebeans" />
    <Icon3 />
  </button>
  <button popovertarget="popover4">
    <img src="/images/coffee/espgrande.avif" alt="bag of coffebeans" />
    <Icon />
  </button>
</div>

<style>
  button {
    background: none;
    display: flex;
    gap: 1rem;
    flex-direction: column;
    align-items: center;
    width: 100px;
    border: none;
    cursor: pointer;
    transition:
      scale 0.2s ease,
      rotate 0.2s ease;
    &:hover {
      scale: 2;
      rotate: 180deg;
      z-index: 2;
    }
  }

  div {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    /* gap: 2rem; */
    width: 100%;
    /* overflow-y: clip; */

    & img {
      width: 50px;
    }
  }
</style>
