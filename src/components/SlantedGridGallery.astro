    .gallery-wrapper > div:hover {
      transition:
        scale 200ms ease-in-out,
        filter 200ms ease-in-out,
        rotate 200ms ease-in-out,
        clip-path 200ms ease-in-out 200ms;
      scale: 1.1;
      /* rotate: 14deg; */
      --_clip-path: 0 0, 100% 0, 100% 100%, 0 100%;
      z-index: 100;
      opacity: 1;
    }

    .gallery-wrapper:has(:hover) > div:not(:hover) {
      filter: grayscale(1) blur(3px);
      opacity: 0.5;
      scale: 0.9;
    }
    .gallery-wrapper > div:not(:hover) {
      animation: zIndexHack 1000ms;
    }

    @keyframes zIndexHack {
      0%,
      100% {
        z-index: 100;
      }
    }
