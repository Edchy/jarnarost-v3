---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page not found" description="This page doesnt seem to exist">
  <section>
    <div>
      <h2>Oops!</h2>
      <p>Denna sida finns inte...Sorry!</p>
      <a href="/">Tillbaks</a>
    </div>
    <img src="/images/decorations/mashed.jpg" alt="" />
  </section>
</Layout>

<style>
  section {
    max-height: 100vh;
    background-color: #f5f3c2;
    font-family: var(--font-copy);
  }
  div {
    text-align: center;
    width: 100%;
    font-size: var(--step-1);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding-inline: 1rem;
  }
  p {
    font-size: var(--step-0);
  }
  img {
    max-height: 100vh;
    object-fit: contain;
    width: 100%;
  }
  a {
    font-size: 1rem;
    padding: 0.5rem 1rem;
    display: block;
    margin: auto;
    color: white;
    font-weight: bold;
    background-color: var(--color-brand-2);
    transition: scale 0.2s;
  }
  a:hover {
    opacity: 1;
    scale: 1.1;
  }
</style>
